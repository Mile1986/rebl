<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="SecureBundle\Entity\User" repository-class="SecureBundle\Repository\UserRepository" table="user">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="username" type="string" length="60" unique="true" />
        <field name="password" type="string" unique="true"/>
        <field name="roles" type="text" />

        <one-to-one field="account" target-entity="SecureBundle\Entity\Account">
            <join-column name="account_id" referenced-column-name="id" />
        </one-to-one>
    </entity>
</doctrine-mapping>